.bill-tag,
.describe_div {
	float: left;
	margin-right: 3.5%;
	height: 100%;
	font-size: 14px;
	/*px*/
}

.money_div {
	float: left;
	width: 50%;
	text-align: right;
}

.list_div {
	padding-left: 5.8%;
	height: 55px;
	background: #FFFFFF;
	clear: both;
}

@media only screen and (max-width: 320px) {
	.list_div {
		padding-left: 2%;
	}
	.describe_div {
		width: 50%;
		font-size: 12px;
		/*px*/
	}
	.money_div {
		width: 45%;
		font-size: 12px !important;
		/*px*/
	}
}

.bill-tag-detail {
	font-size: 25px !important;
	/*px*/
	line-height: 55px;
	margin-right: 3.5%;
}

.describe_div {
	padding-top: 8px;
	width: 35%;
}

.decribe-comment {
	color: rgb(51, 51, 51);
	overflow: hidden;
	display: inline-block;
	height: 17px;
	text-overflow: ellipsis;
	white-space: nowrap;
	width: 100%;
}

.decribe-time {
	color: rgb(119, 119, 119);
}

.body_div_header {
	position: relative;
	height: 35px;
	line-height: 35px;
	font-size: 15px;
	margin-top: 8px;
	padding-left: 4%;
}

.money_div {
	line-height: 55px;
	font-size: 18px;
	/*px*/
}

.collect .bill-tag-detail,
.collect .money_div {
	color: rgb(255, 121, 22);
}

.pay .bill-tag-detail,
.pay .money_div {
	color: rgb(118, 175, 27);
}

.bill-tag-txt {
	display: inline-block;
	position: absolute;
	top: 0px;
	font-size: 12px;
	/*px*/
	line-height: 55px;
	width: 25px;
	text-align: center;
	color: #FFFFFF;
}

.money-list-content {
	position: relative;
	padding-right: 4%;
	height: 100%;
}

.bill-detail-container {
	position: relative;
}

.bill-detail-container .list_div:last-child .money-list-content {
	border-bottom: none;
}



.body_div_header:after,.bill-detail-container:after {
	position: absolute;
	right: 0;
	bottom: 0;
	left: 0;
	height: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
	background-color: #CCCCCC;
}