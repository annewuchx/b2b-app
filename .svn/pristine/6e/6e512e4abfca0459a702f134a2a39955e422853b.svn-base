.feedback body {
  background-color: #EFEFF4;
}

.feedback input,
.feedback textarea {
  border: none !important;
}

.feedback textarea {
  height: 2.666667rem;
  margin-bottom: 0 !important;
  padding-bottom: 0 !important;
}

.feedback .row {
  width: 100%;
  background-color: #fff;
}

.feedback p {
  padding: 0.266667rem 0.4rem 0;
}

.feedback button#submit {
  width: 90%;
  height: 1.226667rem;
  left: 50%;
  -webkit-transform: translate(-50%);
}

.feedback .hidden {
  display: none;
}

.feedback .image-list {
  width: 100%;
  height: 2.266667rem;
  background-size: cover;
  padding: 0.266667rem 0.266667rem;
  overflow: hidden;
}

.feedback .image-item {
  width: 1.733333rem;
  height: 1.733333rem;
  background-image: url(../images/iconfont-tianjia.png);
  background-size: 100% 100%;
  display: inline-block;
  position: relative;
  border-radius: 0.133333rem;
  margin-right: 0.266667rem;
  margin-bottom: 0.266667rem;
  border: solid 1px #e8e8e8;
}

.feedback .image-item input[type="file"] {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  cursor: pointer;
  z-index: 0;
}

.feedback .image-item.space {
  border: none;
}

.feedback .image-item .image-close {
  position: absolute;
  display: inline-block;
  right: -0.16rem;
  top: -0.16rem;
  width: 0.533333rem;
  height: 0.533333rem;
  text-align: center;
  line-height: 0.533333rem;
  border-radius: 0.32rem;
  background-color: #FF5053;
  color: #f3f3f3;
  border: solid 1px #FF5053;
  font-weight: 200;
  z-index: 1;
}

[data-dpr="1"] .feedback .image-item .image-close {
  font-size: 9px;
}

[data-dpr="2"] .feedback .image-item .image-close {
  font-size: 18px;
}

[data-dpr="3"] .feedback .image-item .image-close {
  font-size: 27px;
}

.feedback .image-item.space .image-close {
  display: none;
}